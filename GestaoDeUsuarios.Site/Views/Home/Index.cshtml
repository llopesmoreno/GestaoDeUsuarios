@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div class="row">
        <button class="btn btn-success" data-toggle="modal" data-target="#modalCadastro">Adicionar</button>
        <table class="table table-sm table-responsive ">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="col">Lucas</td>
                    <td scope="col">Lopes Moreno</td>
                    <td scope="col">410.402.458-97</td>
                    <td scope="col">11 4576 3826</td>
                    <td class="text-center" scope="col">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAtualizacao">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </button>
                        <button type="button" class="btn btn-danger" aria-label="Left Align">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="modalCadastro" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cadastrar</h4>
            </div>
            <div class="modal-body">
                <form id="FormCadastro">
                    <div class="form-group">
                        <input type="text" class="form-control" id="name" placeholder="Nome">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Sobrenome" placeholder="SobreNome">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" id="Cpf" placeholder="CPF">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" id="Telefone" placeholder="Telefone">
                    </div>
                    <button type="submit" class="btn btn-primary">Gravar</button>
                    <button class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAtualizacao" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Atualizar</h4>
            </div>
            <div class="modal-body">
                <form id="FormAtualizar">
                    <div class="form-group">
                        <input type="text" class="form-control" id="idAtualizar" placeholder="Nome" readonly>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="nameAtualizar" placeholder="Nome">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="SobreNomeAtualizar" placeholder="SobreNome">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" id="CpfAtualizar" placeholder="CPF">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" id="TelefoneAtualizar" placeholder="Telefone">
                    </div>
                    <button type="submit" class="btn btn-primary">Gravar</button>
                    <button class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>


