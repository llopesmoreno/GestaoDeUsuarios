@model GestaoDeUsuarios.Site.Models.Home
<table id="tableUsers" class="table table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th class="hidden-xs" scope="col">Sobrenome</th>
            <th scope="col">CPF</th>
            <th scope="col">Telefone</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users.Any())
        {
            foreach (var item in Model.Users)
            {
                
                
                <tr id="@item.id">
                    <td id="@item.id tdn" scope="col">@item.nome</td>
                    <td class="hidden-xs" id="@item.id tds" scope="col">@item.sobrenome</td>
                    <td id="@item.id tdc" scope="col">@item.cpf</td>
                    <td id="@item.id tdt" scope="col">@item.telefone</td>
                    <td id="@item.id td" scope="col">
                        <button class="btn btn-primary" data-toggle="modal" data-target="#modalAtualizacao" onclick="preencherCamposAtualizacao('@item.id')">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </button>
                        <button name="@item.id btnd" data-toggle="modal" data-target="#modalExclusao" type="button" class="btn btn-danger" aria-label="Left Align" onclick="preencherCamposExclusao('@item.id')">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    <label>Nenhum usuário cadastrado...</label>
                </td>
            </tr>
        }
    </tbody>
</table>



